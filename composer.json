{
  "name": "blank",
  "type": "Wordpress-theme",
  "description": "Wordpress Theme Boilerplate",
  "license": "GNU GPL",
  "authors": [
    {
      "name": "Andrew Dudin",
      "email": "iluxor@yandex.ru"
    }
  ],
  "repositories":[
      {
          "type":"composer",
          "url":"https://wpackagist.org"
      }
  ],
  "require": {
    "php": ">=5.6.4",
    "htmlburger/carbon-fields": "*",
    "phpmailer/phpmailer": "^5.2",
    "timber/timber": "^1.3.3",
    "twig/twig": "^2.4.3",
    "wpackagist-plugin/polylang": "*",
    "wpackagist-plugin/tinymce-advanced": "*"
  },
  "autoload": {
      "psr-4": {
         "App\\": "app/"
      }
  },
  "config": {
        "vendor-dir": "core/vendor",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "installer-paths": {
            "core/vendor/{$name}": ["htmlburger/carbon-fields"],
            "../../plugins/{$name}": ["wpackagist-plugin/polylang", "wpackagist-plugin/tinymce-advanced"]
        }
    }
}
