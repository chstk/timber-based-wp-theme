{% extends "layouts/base.twig" %}

{% block content %}
    <div class="post-wrap" id="post-{{ post.ID }}">
        <h1>{{ post.title }}</h1>
        {{ post.content }}
    </div>

    <div class="blog-comment {{comment.comment_type}}" id="blog-comment-{{comment.ID}}">
        <h5 class="comment-author">{{comment.author.name}} says</h5>
        <div class="comment-content">{{comment.comment_content|wpautop}}</div>

        <section class="comment-box">
            <!-- child comments -->
            {% if post.comments %}
                <h4> replies </h4>
                <div class="comments">
                    {% for cmt in comment.children %}
                        {% include "comment.twig" with {comment:cmt} %}
                    {% endfor %}
                </div>
            {% endif %}

            <!-- comment form -->
            {% include "particals/comment-form.twig" %}
        </section>
    </div>

{% endblock %}
